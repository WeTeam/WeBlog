@using Sitecore.Modules.WeBlog
@using Sitecore.Modules.WeBlog.Extensions
@using Sitecore.Modules.WeBlog.Globalization
@model Sitecore.Modules.WeBlog.Model.PostListEntryRenderingModel

<li class="wb-entry-list-entry">
    @Html.Sitecore().Field("Thumbnail Image", new { @class = "wb-image", mw = Model.MaxWidth, mh = Model.MaxHeight })
    <div class="wb-entry-detail">
        <h2>
            <a href="@Model.EntryItem.Url">@Model.EntryItem.DisplayTitle.ToHtmlString()</a>
        </h2>
        <div class="wb-details">
            @Translator.Format("ENTRY_DETAILS", Model.EntryItem.Created.ToString(Settings.DateFormat), Model.EntryItem.AuthorName).ToHtmlString()
        </div>

        @Model.Summary.ToHtmlString()

        <a class="wb-read-more" href="@Model.EntryItem.Url">@Translator.Text("READ_MORE").ToHtmlString()</a>

        @if (Model.EntryItem.CommentCount > 0 || !Model.EntryItem.DisableComments.Checked)
        {
            <span class="wb-comment-count">
                @Translator.Render("COMMENTS").ToHtmlString() (@Model.EntryItem.CommentCount)
            </span>
        }
    </div>
</li>