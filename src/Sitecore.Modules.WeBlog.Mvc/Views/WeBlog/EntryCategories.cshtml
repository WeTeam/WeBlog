@using Sitecore.Links; 
@using Sitecore.Modules.WeBlog.Extensions
@using Sitecore.Modules.WeBlog.Globalization
@model Sitecore.Modules.WeBlog.Mvc.Model.EntryCategories

@if (Model.CategoryItems.Length > 0 || Model.IsPageEditing)
{
    <div class="wb-entry-categories">
        <h3>@Translator.Render("POSTED_IN").ToHtmlString()</h3>
        <ul>
            @foreach (var categoryItem in @Model.CategoryItems)
            {
                <li>
                    <a href="@LinkManager.GetItemUrl(categoryItem)">
                        @Html.Sitecore().Field("Title", categoryItem)
                    </a>
                </li>
            }
        </ul>
    </div>
}